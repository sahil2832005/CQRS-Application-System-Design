# Server Configuration
PORT=3001
NODE_ENV=development
API_PREFIX=/api/v1

# MongoDB Database (Write Database)
MONGODB_URI=mongodb://localhost:27017/user-service
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/user-service

# Redis Configuration (Read Database)
REDIS_URI=redis://localhost:6379
CACHE_ENABLED=true

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=1d

# Logging
LOG_LEVEL=info
