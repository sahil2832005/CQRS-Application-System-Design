# Main Project Configuration
NODE_ENV=development

# API Gateway
API_GATEWAY_PORT=3000

# Service Discovery
SERVICE_REGISTRY_ENABLED=false
SERVICE_REGISTRY_URL=http://localhost:8500

# Distributed Tracing
TRACING_ENABLED=false

# Logging
LOG_LEVEL=info

# Shared MongoDB Configuration
SHARED_MONGODB_URI=mongodb://localhost:27017/cqrs-application

# Shared Redis Configuration
SHARED_REDIS_URI=redis://localhost:6379

# JWT (shared across services)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=1d

# Service URLs
USER_SERVICE_URL=http://localhost:3001
# Add more service URLs as they are developed
